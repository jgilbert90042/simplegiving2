{% extends "SiteCoreBundle::layout_nocms.html.twig" %}

{% block content %}
<br>
<br>
Churches<br>
<br>
<a href="{{ path('_a_new_church') }}">Add Church</a><br>
<br>
<table class=messages>
  <tr>
    <th class=messages>Name</th>
    <th class=messages>Denomination</th>
    <th class=messages>City</th>
    <th class=messages>State</th>
    <th class=messages>Visible</th>
    <th class=messages></th>
  </tr>
{% for church in churches %}
<tr>
  <td class=messages><a href="{{ path('_church_view', {'churchId': church.id}) }}">{{ church.name }}</a></td>
  <td class=messages>{{ church.denomination.name }}</td>
  <td class=messages>{{ church.city }}</td>
  <td class=messages>{{ church.state }}</td>
  <td class=messages> <a href="{{ path('_a_church_visible', {'churchId': church.id}) }}">
{% if church.visible %}
Searchable
{% else %}
Unsearchable
{% endif %}
</a></td>
<td class=messages>
<a href="{{ path('_a_edit_church', {'churchId': church.id}) }}">Edit</a>
</td>
</tr>
{% endfor %}
</table>
<br>
<a href="{{ path('_a_new_church') }}">Add Church</a>
{% endblock %}